<resources>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme" />

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/white</item>
    </style>





    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>

    </style>

    <style name="ProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    
    //  app custom text fields
    
    <style name="Text_Title_Big" parent="android:Widget.TextView">
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_huge</item>
        <item name="android:fontFamily">cursive</item>
    </style>
    <style name="Text_Title_Normal" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_huge</item>
    </style>
    <style name="Text_Title_sub_Normal" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>
    <style name="Text_Normal" parent="android:Widget.TextView">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>
    
</resources>
